<h1>Welcome here are all the users</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th scope="col">Twitter</th>
      <th scope="col">Facebook</th>
      <th scope="col">Instagram</th> 
      <th colspan="3" scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <th scope="row"><span><%= user.id %></span></th>
      <td><span><%=user.name %></span></td>
      <td><span><%=user.description %></span></td>
      <td><a href="#"><%=user.twitter %></a></td>
      <td><a href="#"><%=user.facebook %></a></td>
      <td><a href="#"><%=user.instagram %></a></td>
      <td><%= link_to 'Show', user_path(user) %></td>  
      <td><%= link_to 'Edit', edit_user_path(user) %></td>  
      <td><%= link_to 'Delete', user_path(user), method: :delete %></td> 
    </tr>
    <% end %>  
    </tbody>
</table>
<p>
<td><%= button_to 'New User', new_user_path, method: :get  %></td>  
</p>
