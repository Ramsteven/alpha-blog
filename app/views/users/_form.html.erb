  <% if @user.errors.any? %>
  <h2>The following errors prevented the user from being saved</h2>
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
  <% end %>


<%= form_with(model: @user, local: true) do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :twitter   %>
    <%= f.text_field :twitter %>
  </p>

  <p>
    <%= f.label :facebook %>
    <%= f.text_field :facebook %>
  </p>

  <p>
    <%= f.label :instagram %>
    <%= f.text_field :instagram %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>


<%= link_to 'Return to list of users', users_path, method: :get %>  
