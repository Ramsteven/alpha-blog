<h1>Edit user</h1>

<% if @user.errors.any? %>
  <h2>The following errors prevented the user from being saved</h2>
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with(model: @user, local: true) do |f| %>

  <p>
    <%= f.label :name %><br/>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :description %><br/>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :twitter   %><br/>
    <%= f.text_area :twitter %>
  </p>

  <p>
    <%= f.label :facebook %><br/>
    <%= f.text_area :facebook %>
  </p>

  <p>
    <%= f.label :instagram %><br/>
    <%= f.text_area :instagram %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>
